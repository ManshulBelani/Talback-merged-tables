<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <ToggleButton
            android:id="@+id/toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <ToggleButton
            android:id="@+id/toggle_button_with_onoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/instrumentation_test_user_custom_off"
            android:textOn="@string/instrumentation_test_user_custom_on" />

    <ToggleButton
            android:id="@+id/toggle_button_with_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/instrumentation_test_user_contene_description_v2" />

    <ToggleButton
            android:id="@+id/toggle_button_with_desc_onoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="contentDescription"
            android:textOff="@string/instrumentation_test_user_custom_off"
            android:textOn="@string/instrumentation_test_user_custom_on" />

    <ToggleButton
            android:id="@+id/toggle_button_with_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/instrumentation_test_user_contene_description_v2"
            android:drawableTop="@android:drawable/btn_star"
            android:textOff="@null"
            android:textOn="@null" />

</LinearLayout>