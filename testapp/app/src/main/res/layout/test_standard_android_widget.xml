<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/test_standard_android_widget_button1"
                style="@style/MaterialTextButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:padding="16dp"
                android:text="@string/sample_button"
                android:textColor="@color/test_case_item_buttons" />

            <Button
                android:id="@+id/test_standard_android_widget_button2"
                style="@style/MaterialTextButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:padding="16dp"
                android:text="@string/change_description_button"
                android:textColor="@color/test_case_item_buttons" />

            <Button
                android:id="@+id/test_standard_android_widget_button3"
                style="@style/MaterialTextButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/expand_button"
                android:textColor="@color/test_case_item_buttons" />

            <ImageButton
                android:id="@+id/test_standard_android_widget_unlabeledImageButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@android:drawable/ic_btn_speak_now" />

            <ToggleButton
                style="@style/MaterialTextButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/test_case_item_buttons" />

            <Spinner
                android:id="@+id/test_standard_android_widget_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp" />

            <SeekBar
                android:id="@+id/content1_seekbar1"
                style="@android:style/Widget.Holo.Light.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:padding="16dp"
                android:progress="0"
                android:secondaryProgress="0" />

            <SeekBar
                android:id="@+id/content1_seekbar2"
                style="@android:style/Widget.Holo.Light.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="7"
                android:padding="16dp"
                android:progress="0"
                android:secondaryProgress="0" />

            <Switch
                android:id="@+id/content1_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp" />

            <CheckBox
                android:id="@+id/content1_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp" />

            <ProgressBar
                android:id="@+id/test_standard_android_widget_progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/progress_bar_content_desc"
                android:focusable="true"
                android:padding="16dp" />

            <Button
                android:id="@+id/test_standard_android_widget_reset_button"
                style="@style/MaterialTextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/reset_progress_bar"
                android:textColor="@color/test_case_item_buttons" />

            <AutoCompleteTextView
                android:id="@+id/test_standard_android_widget_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>